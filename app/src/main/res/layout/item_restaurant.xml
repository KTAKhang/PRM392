<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_card"
    android:stateListAnimator="@animator/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image với overlay gradient -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_image_overlay" />

            <!-- Favorite button với animation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvFavButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <ImageButton
                    android:id="@+id/ivFav"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_fav_button_ripple"
                    android:src="@android:drawable/btn_star_big_off"
                    android:contentDescription="Yêu thích"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:stateListAnimator="@null" />
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Tên quán -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên quán ăn"
                android:textColor="#111827"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:letterSpacing="0.02"
                android:layout_marginBottom="10dp" />

            <!-- Địa chỉ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="#667EEA"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ quán ăn"
                    android:textColor="#6B7280"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
