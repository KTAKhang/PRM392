<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PRM392_finalProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors - Purple gradient theme -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary colors - Blue gradient -->
        <item name="colorSecondary">@color/secondary_blue_light</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_cyan</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/bg_light</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_purple_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@android:color/white</item>
    </style>

    <style name="Theme.PRM392_finalProject" parent="Base.Theme.PRM392_finalProject" />
    
    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="ButtonSecondary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="ButtonDanger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button_danger</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>
